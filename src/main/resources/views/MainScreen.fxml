<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" prefWidth="800" prefHeight="600" fx:controller="com.mermil.erp.controllers.MainScreenController">
    <!-- Left side: VBox of options -->
    <top>
        <HBox alignment="CENTER_RIGHT" style="-fx-background-color: #f4f4f4; -fx-padding: 10;">
            <Button text="Logout" onAction="#handleLogout" style="-fx-cursor:pointer -fx-background-color: #d9534f; -fx-text-fill: black; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <left>
        <VBox prefWidth="250" style="-fx-background-color: lightblue;">
            <Label text="ventas" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 5px;"/>
            <Button text="recibo"  onAction="#handleReciboPopupScreen" style="-fx-cursor:pointer; -fx-background-color: #5bc0de; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5px;"/>
            <Button text="stock" onAction="#handleStockButton" style="-fx-cursor:pointer; -fx-background-color: #5cb85c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5px;"/>
        </VBox>
    </left>

    <!-- Right side: Gray blank space -->
    <right>
        <Pane prefWidth="550" fx:id="rightPane" style="-fx-background-color: lightgray;">
            
            <VBox spacing="10" alignment="CENTER">
            <!-- Content for the right side goes here -->
            </VBox>
        </Pane>
    </right>
</BorderPane>

