<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.mermil.erp.controllers.stock.UploadStockController"
            prefHeight="550.0" prefWidth="800.0" minWidth="800" maxWidth="800" minHeight="550" maxHeight="550">

    <children>
        <Label layoutX="20.0" layoutY="20.0" text="Product Management" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

        <ListView fx:id="productListView" layoutX="20.0" layoutY="60.0" prefHeight="300.0" prefWidth="760.0"/>

        <Label layoutX="20.0" layoutY="380.0" text="Add/Edit Product" style="-fx-font-size: 16px;"/>

        <TextField fx:id="codProductTextField" layoutX="20.0" layoutY="410.0" prefWidth="200.0" promptText="Cod Product"/>
        <TextField fx:id="descriptionTextField" layoutX="240.0" layoutY="410.0" prefWidth="400.0" promptText="Description"/>
        <TextField fx:id="priceTextField" layoutX="660.0" layoutY="410.0" prefWidth="120.0" promptText="Price"/>

        <Button fx:id="addButton" layoutX="20.0" layoutY="450.0" prefWidth="100.0" text="Add" onAction="#handleAddButtonClick"/>
        <Button fx:id="updateButton" layoutX="130.0" layoutY="450.0" prefWidth="100.0" text="Update" onAction="#handleUpdateButtonClick"/>
        <Button fx:id="deleteButton" layoutX="240.0" layoutY="450.0" prefWidth="100.0" text="Delete" onAction="#handleDeleteButtonClick"/>

        <Button fx:id="uploadButton" layoutX="660.0" layoutY="450.0" prefWidth="100.0" text="Upload File" onAction="#handleUploadButtonClick"/>
        <Label fx:id="statusLabel" layoutX="20.0" layoutY="490.0" prefWidth="740.0"/>
    </children>

</AnchorPane>